    <div class="container">
        <h2 class="border-bottom pb-2 mb-4">教室作成</h2>
    </div>

    <%= form_with model:@room do |f| %>
        <div class="form-group container">
            <%= f.label :title, '授業タイトル', class: "classTitleTextarea" %>
            <%= f.text_field :title, class: "form-control mb-4", placeholder: "授業タイトル", required: true%>
            <%= f.label :detail, '授業内容', class: "classContentsTextarea" %>
            <%= f.text_area :detail, class: "form-control mb-4", rows: "3", placeholder: "授業内容", required: true%>
            <%= f.submit "教室作成", class: "btn btn-primary mt-3 mb-2" %>
        </div>
    <% end %>

